import java.util.*;

public class Recursao {

    public static void main(String[] args) {

    	Scanner sc= new Scanner(System.in);

        somatorio(sc.nextInt());
    }

    
    static int somatorio(int numero) {

    	
        if (numero == 0) {
            return 0;
        } else {
            return numero + somatorio(numero - 1);
        }
    }
}
