import java.util.Scanner;

public class SomandoMultiplos {

	public static void main (String[] args) {
	    int x = 3;
	    int z = 5;
	    int somax = 0;
	    int somaz = 0;
	    int res;

	    for(int i = 1; i < 1000; i++) {
	        if(i % x == 0) {
	            somax += i;
	        }
	    }
	    for(int i = 1; i < 1000; i++) {
	        if(i % z == 0) {
	            somaz += i;
	        }
	    }
	    res = somax + somaz;

	    System.out.println("A soma dos multiplos de 3 e 5 abaixo de 1000, Ã©: " +res);
	}
	}

